{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2024"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
